<%= form_with model: @question, data: {turbo: false} do |f| %>
  <div>
    <%= f.hidden_field :user_id %>
  </div>
  <div>
    <%= f.label :body, 'Text' %><br>
    <%= f.text_area :body, size: "60x10" %>
  </div>
  <% if @question.persisted? %>
    <div>
      <%= f.label :answer, 'Answer' %><br>
      <%= f.text_area :answer, size: "60x10" %>
    </div>
  <% end %>
  <%= f.submit class: 'button button-main' %>
<% end %>